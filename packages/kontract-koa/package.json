{
  "name": "@kontract/koa",
  "version": "0.1.0",
  "description": "Koa adapter for kontract",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js"
    },
    "./builder": {
      "types": "./dist/builder/index.d.ts",
      "import": "./dist/builder/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist",
    "test": "TSX_TSCONFIG_PATH=tsconfig.test.json node --import=tsx bin/test.ts",
    "demo": "tsx demo/index.ts",
    "demo:watch": "tsx watch demo/index.ts"
  },
  "dependencies": {
    "kontract": "^0.4.0",
    "@kontract/ajv": "^0.1.0"
  },
  "devDependencies": {
    "@japa/assert": "^4.2.0",
    "@japa/runner": "^4.4.0",
    "@koa/router": "^15.0.0",
    "@sinclair/typebox": "^0.34.33",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.15.21",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@koa/router": ">=12.0.0",
    "@sinclair/typebox": ">=0.32.0",
    "ajv": "^8.0.0",
    "koa": ">=2.14.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "ajv": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "koa",
    "openapi",
    "swagger",
    "typescript",
    "validation"
  ],
  "author": "Drew Daniels",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drew-Daniels/kontract.git",
    "directory": "packages/kontract-koa"
  },
  "homepage": "https://github.com/Drew-Daniels/kontract#readme",
  "bugs": {
    "url": "https://github.com/Drew-Daniels/kontract/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
