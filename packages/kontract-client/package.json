{
  "name": "@kontract/client",
  "version": "0.1.0",
  "description": "Type-safe HTTP client for kontract route definitions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist",
    "test": "TSX_TSCONFIG_PATH=tsconfig.test.json node --import=tsx bin/test.ts"
  },
  "dependencies": {
    "kontract": "*"
  },
  "devDependencies": {
    "@japa/assert": "^4.2.0",
    "@japa/runner": "^4.4.0",
    "@sinclair/typebox": "^0.34.33",
    "@types/node": "^22.15.21",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@sinclair/typebox": ">=0.32.0",
    "@kontract/ajv": "*"
  },
  "peerDependenciesMeta": {
    "@kontract/ajv": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "kontract",
    "http-client",
    "typescript",
    "typebox",
    "api-client",
    "type-safe",
    "fetch"
  ],
  "license": "MIT"
}
