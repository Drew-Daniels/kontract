{
  "name": "@kontract/fastify",
  "version": "0.1.0",
  "description": "Fastify adapter for kontract with native validation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js"
    },
    "./builder": {
      "types": "./dist/builder/index.d.ts",
      "import": "./dist/builder/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "TSX_TSCONFIG_PATH=tsconfig.test.json node --import=tsx bin/test.ts",
    "typecheck": "tsc --noEmit",
    "demo": "tsx demo/index.ts",
    "demo:watch": "tsx watch demo/index.ts"
  },
  "dependencies": {
    "kontract": "*"
  },
  "peerDependencies": {
    "fastify": "^5.0.0",
    "@sinclair/typebox": ">=0.32.0",
    "@fastify/type-provider-typebox": "^5.0.0"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^5.1.0",
    "@japa/api-client": "^3.0.0",
    "@japa/assert": "^4.2.0",
    "@japa/runner": "^4.4.0",
    "@sinclair/typebox": "^0.34.33",
    "@types/node": "^22.15.21",
    "fastify": "^5.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "fastify",
    "openapi",
    "swagger",
    "typescript",
    "typebox"
  ],
  "author": "Drew Daniels",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Drew-Daniels/kontract.git",
    "directory": "packages/kontract-fastify"
  },
  "homepage": "https://github.com/Drew-Daniels/kontract#readme",
  "bugs": {
    "url": "https://github.com/Drew-Daniels/kontract/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
